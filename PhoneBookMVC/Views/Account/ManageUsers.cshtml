@model PhoneBookMVC.ViewModels.UsersVM.UsersManageUsersVM

@{
    ViewBag.Title = "ManageUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ManageUsers</h2>

<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Role
        </th>
        <th>
            Email
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model.Users) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href="Edit/@item.ID" class="icon-mini">
                <img src="~/Content/images/icons/edit.png" alt="Edit" />
            </a> |
            <a href="Delete/@item.ID" class="icon-mini">
                <img src="~/Content/images/icons/delete.png" alt="Delete" />
            </a>
        </td>
    </tr>
}

</table>
